@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="fa">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/assets/css/bootstrap.rtl.min.css">
    <link rel="stylesheet" href="/assets/css/main.css">
    <title>Sign up</title>

</head>

<body dir="rtl">
    <div class="container vh-100 d-flex align-items-center">
        <div class="row w-100 align-items-center">
            <div class="col-lg-4">
                <div class="container ">
                    <form asp-controller="Accounting" asp-action="SignUp" class="needs-validation" novalidate method="post">
                        <h2 class="mb-3 text-muted">ثبت‌‌نام</h2>
                        <div class="form-floating mb-3">
                            @* <input name="FirstName" type="text" class="form-control" id="txtFirstName" placeholder="" required value="@Model.FirstName"> *@
                            <input name="FirstName" type="text" class="form-control" id="txtFirstName" placeholder="" required>
                            <label for="txtFirstName">نام</label>
                            <div class="invalid-feedback">
                                نام را وارد کنید.
                            </div>
                        </div>
                        <div class="form-floating mb-3">
                            @* <input name="LastName" type="text" class="form-control" id="txtLastName" placeholder="" required value="@Model.LastName"> *@
                            <input name="LastName" type="text" class="form-control" id="txtLastName" placeholder="" required>
                            <label for="txtLastName">نام خانوادگی</label>
                            <div class="invalid-feedback">
                                نام خانوادگی را وارد کنید.
                            </div>
                        </div>
                        <div class="form-floating mb-3">
                            @* <input name="UserName" type="text" class="form-control" id="txtUserName" placeholder="" required value="@Model.UserName"> *@
                            <input name="UserName" type="text" class="form-control" id="txtUserName" placeholder="" required>
                            <label for="txtUserName">نام کاربری</label>
                            <div id="validationServerUsernameFeedback" class="invalid-feedback">
                               نام کاربری را وارد کنید.
                            </div>

                        </div>
                        <div class="form-floating mb-3">
                            @* <input name="Password" type="text" class="form-control" id="txtPassword" placeholder="" required value="@Model.Passwrod"> *@
                            <input name="Password" type="text" class="form-control" id="txtPassword" placeholder="" required
                                   pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}">
                            <label for="txtPassword">رمز عبور</label>
                            <div class="invalid-feedback">
                                رمز عبور باید حداقل 8 کاراکتر و حاوی حروف کوچک و بزرگ، اعداد و نماد باشد.
                            </div>
                        </div>
                        <div class="d-flex justify-content-center flex-column">
                            <button type="submit" class="d-block btn btn-outline-primary mb-3">ثبت‌نام</button>
                            <a href="signin.html" class="text-center">ورود</a>
                        </div>
                        @if (ViewBag.ResultState != null)
                        {
                            <hr />
                            @if (ViewBag.ResultState == true)
                            {
                                <div class="alert alert-success" role="alert">
                                    ثبت نام شدید.
                                </div>
                            }
                            else
                            {
                                @if (ViewBag.Result == MailAutomation.Application.Common.Results.UserAleardyExist)
                                {
                                    <div class="alert alert-danger" role="alert">
                                        نام کاربری از قبل وجود دارد.
                                    </div>
                                }
                                else
                                {
                                    <div class="alert alert-danger" role="alert">
                                        ثبت نام نشدید.
                                    </div>
                                }
                            }
                        }
                    </form>

                </div>
            </div>
            <div class="col-lg-8 d-none d-lg-block">
                <img src="/assets/images/svgs/coding-5-61.svg" alt="">
            </div>
        </div>
    </div>


    <script src="/assets/js/bootstrap.bundle.min.js"></script>
    <script src="/assets/js/validation.js"></script>
</body>

</html>